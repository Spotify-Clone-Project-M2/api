{
  "compilerOptions": {
    "outDir": "./dist", /* Specify the output directory for compiled JavaScript files */
    "baseUrl": "./", /* Set the base directory for non-relative module imports */
    "rootDir": "./src", /* Specify the root directory for source files (TypeScript files in src) */
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "lib": ["es6"]
  },
  "include": [
    "src/**/*.ts" /* Include all TypeScript files in the 'src' directory */
  ],
  "exclude": [
    "node_modules", /* Exclude the node_modules folder */
    "dist" /* Exclude the output directory 'dist' */
  ]
}