{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts",
    "src/types/custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}